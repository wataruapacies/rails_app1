<div class="container">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:notice_update] %>
    <div class="flash">
      <%= flash[:notice_update] %>
    </div>
  <% end %>
  
  <h1>User info</h1>
  <%= image_tag @book.user.get_profile_image(100,100) %>
  <h3>name：<%= @book.user.name %></h3>
  <h3>introduction：<%= @book.user.introduction %></h3>
  <%= link_to edit_user_path(@book.user.id) do %>
    <button type="button" class="btn btn-outline-secondary"><i class="fas fa-user-cog"></i></button>
  <% end %>
  
  <h1>New book</h1>
  <%= form_with model: @list,url:books_path, method: :post do |f| %>
  
    <h4>Title</h4>
    <%= f.text_field :title %>
  
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <div>
      <%= f.submit "Create Book", class:"btn btn-success" %>
    </div>
  
  <% end %>
  <h1>Book detail</h1>
  <div class="show_box">
    <div class="show">
      <p><%= @book.title %></p>
    </div>
  
    <div class="show">
      <p><%= @book.body %></p>
    </div>
    <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
    <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
  </div>
  
  <div　class="click">
    <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id) %>
    <% end %>
    <%= link_to "Back", books_path %>
    <% if @book.user == current_user %>
      <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
    <% end %>
  </div>
  
  
  
</div>
