<div class="container">
  <div class="row">
    <div class="col-3">
      <% if flash[:notice] %>
        <div class="flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:notice_update] %>
        <div class="flash">
          <%= flash[:notice_update] %>
        </div>
      <% end %>
      
      <h1>User info</h1>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th>name</th>
          <th><%= @book.user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @book.user.introduction %></th>
        </tr>
      </table>
      <%= link_to edit_user_path(@book.user.id) do %>
        <button type="button" class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></button>
      <% end %>
      
      <h1>New book</h1>
      <%= form_with model: @list,url:books_path, method: :post do |f| %>
      
        <h4>Title</h4>
        <%= f.text_field :title %>
      
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <div>
          <%= f.submit "Create Book", class:"btn btn-success" %>
        </div>
      
      <% end %>
    </div>
    <div class="col-1"></div>
    <div class="col-8">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">
              <%= image_tag @book.user.get_profile_image(100,100) %>
              <%= @book.user.name %>
            </th>
            <th scope="col"><%= @book.title %></th>
            <th scope="col"><%= @book.body %></th>
          </tr>
        </thead>
      </table>
      <div class="show_box">
        <div class="show">
          <p><%= @book.title %></p>
        </div>
      
        <div class="show">
          <p><%= @book.body %></p>
        </div>
        <div><%= image_tag @book.user.get_profile_image(100,100) %></div>
        <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
      </div>
      
      <divã€€class="click">
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        <% end %>
        <%= link_to "Back", books_path %>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
